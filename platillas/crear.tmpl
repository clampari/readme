{{ template "cabezera" }}

 <div class="card">

		<div class="card-header">
			Productos
		</div>

		<div class="card-body">

			<form method="POST" action="/insertar">

				<div class="form-group">
					<label>SKU: </label>
					<input type="text" class="form-control" name="sku" id="sku" placeholder=" FAL-354454444">
				</div>
				<div class="form-group">
					<label>Name: </label>
					<input type="text" class="form-control" name="name" id="name" placeholder="Producto name">
				</div>
				<div class="form-group">
					<label>Brand: </label>
					<input type="text" class="form-control" name="brand" id="brand" placeholder="Marca">
				</div>
				<div class="form-group">
					<label>Size: </label>
					<input type="text" class="form-control" name="size" id="size" placeholder="44d">
				</div>
				<div class="form-group">
					<label>Price: </label>
					<input type="text" class="form-control" name="price" id="price" placeholder="5454547">
				</div>
				<div class="form-group">
					<label>Imagen: </label>
					<input type="text" class="form-control" name="img" id="img" placeholder="http">
				</div>

				<button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-success" name="" id="" href="/" role="button">Return</a>

			</form>

		</div>

	</div>

